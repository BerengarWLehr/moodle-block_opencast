{{!
    @template block_opencast/workflow_settings_checkbox

    This template renders a checkbox in the admin style.

    Example context (json):
    {
        "label": "Setting title",
        "info": "info",
        "warning": "Warning",
        "name": "Name",
        "error": "Error",
        "default": "Default value",
        "id": "test0",
        "checked": "checked",
        "description": "Description"
    }
}}
<div class="form-group row form-item mb-0" id="{{id}}">
    <div class="form-label col-sm-3 text-sm-right">
            <label for="{{id}}">
                {{{label}}}
                {{#info}}
                    <div class="alert alert-info small">{{info}}</div>
                {{/info}}
                {{#warning}}
                    <div class="alert alert-warning">{{warning}}</div>
                {{/warning}}
                {{#error}}
                    <div class="alert alert-danger small">{{error}}</div>
                {{/error}}
            </label>
    </div>
    <div class="form-setting col-sm-9">
        <div class="form-checkbox defaultsnext">
            <input type="hidden" name="{{name}}" value="0">
            <input type="checkbox" name="{{name}}" value="1" id="{{id}}" {{#checked}}checked{{/checked}}>
        </div>
        {{#default}}
            <div class="form-defaultinfo text-muted">{{{default}}}</div>
        {{/default}}
        <div class="form-description mt-3">{{{description}}}</div>
    </div>
</div>