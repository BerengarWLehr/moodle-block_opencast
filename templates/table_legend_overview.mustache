{{!
    @template block_opencast/table_legend_overview

    This template renders the table legend container based on context variables to show in overview page.

    Example context (json):
    {
        "colname": "Status",
        "showstatuslegend": "true",
        "showvisibilitylegend": "false"
    }
}}
<div class="opencast-video-table-legend overview" id="{{uniqid}}-legend-container">
    <span class="legend-heading">{{colname}}</span>
    <ul>
        {{#showstatuslegend}}
            <li>
                <span class="legend-item" title="{{#str}}legendocstatesucceededdesc, block_opencast{{/str}}">
                    {{#pix}}succeeded, block_opencast{{/pix}}{{#str}}ocstatesucceeded, block_opencast{{/str}}
                </span>
            </li>
            <li>
                <span class="legend-item" title="{{#str}}legendocstateprocessingdesc, block_opencast{{/str}}">
                    {{#pix}}processing, block_opencast{{/pix}}{{#str}}ocstateprocessing, block_opencast{{/str}}
                </span>
            </li>
            <li>
                <span class="legend-item" title="{{#str}}legenddeletingdesc, block_opencast{{/str}}">
                    {{#pix}}t/delete, core{{/pix}}{{#str}}deleting, block_opencast{{/str}}
                </span>
            </li>
            <li>
                <span class="legend-item" title="{{#str}}legendocstateneedscuttingdesc, block_opencast{{/str}}">
                    {{#pix}}e/cut, core{{/pix}}{{#str}}ocstateneedscutting, block_opencast{{/str}}
                </span>
            </li>
            <li>
                <span class="legend-item" title="{{#str}}legendocstatecapturingdesc, block_opencast{{/str}}">
                    {{#pix}}capturing, block_opencast{{/pix}}{{#str}}ocstatecapturing, block_opencast{{/str}}
                </span>
            </li>
            <li>
                <span class="legend-item" title="{{#str}}legendplanneddesc, block_opencast{{/str}}">
                    {{#pix}}c/event, core{{/pix}}{{#str}}planned, block_opencast{{/str}}
                </span>
            </li>
            <li>
                <span class="legend-item" title="{{#str}}legendocstatefaileddesc, block_opencast{{/str}}">
                    {{#pix}}failed, block_opencast{{/pix}}{{#str}}ocstatefailed, block_opencast{{/str}}
                </span>
            </li>
        {{/showstatuslegend}}
        {{#showvisibilitylegend}}
            <li>
                <span class="legend-item" title="{{#str}}legendvisibility_hiddendesc, block_opencast{{/str}}">
                    {{#pix}}t/show, core{{/pix}}{{#str}}legendvisibility_hidden, block_opencast{{/str}}
                </span>
            </li>
            <li>
                <span class="legend-item" title="{{#str}}legendvisibility_visibledesc, block_opencast{{/str}}">
                    {{#pix}}t/hide, core{{/pix}}{{#str}}legendvisibility_visible, block_opencast{{/str}}
                </span>
            </li>
            <li>
                <span class="legend-item" title="{{#str}}legendvisibility_mixeddesc, block_opencast{{/str}}">
                    {{#pix}}i/warning, core{{/pix}}{{#str}}legendvisibility_mixed, block_opencast{{/str}}
                </span>
            </li>
            <li>
                <span class="legend-item" title="{{#str}}legendvisibility_groupdesc, block_opencast{{/str}}">
                    {{#pix}}t/groups, core{{/pix}}{{#str}}legendvisibility_group, block_opencast{{/str}}
                </span>
            </li>
        {{/showvisibilitylegend}}
    </ul>
</div>
{{#js}}
    require([
        'jquery',
        'core/str',
        'core/modal_factory',
        'core/templates',
        'core/notification'], function($, Str, ModalFactory, Templates, Notification) {

        $("#{{uniqid}}-legend-container").click(function(e) {
            e.preventDefault();

            var titlePromise = Str.get_string('legendtitle', 'block_opencast');
            var modalPromise = ModalFactory.create({type: ModalFactory.types.CANCEL});
            var bodyPromise = Templates.render('block_opencast/table_legend_details', {
                {{#showstatuslegend}}
                    "showstatusdetails": "true"
                {{/showstatuslegend}}
                {{#showvisibilitylegend}}
                    "showvisibilitydetails": "true"
                {{/showvisibilitylegend}}
            });
            $.when(titlePromise, modalPromise).then(function(title, modal) {
                modal.setTitle(title);
                modal.setBody(bodyPromise);

                modal.show();
                return modal;
            }).catch(Notification.exception);
        });
        
    });
{{/js}}
